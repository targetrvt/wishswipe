{
  "name": "wishswipe-desktop",
  "productName": "WishSwipe",
  "version": "1.0.0",
  "description": "WishSwipe - Swipe Your Way to Great Deals",
  "main": "main.js",
  "author": {
    "name": "WishSwipe Team",
    "email": "support@wishswipe.com"
  },
  "license": "MIT",
  "homepage": "https://wishswipe.com",
  "scripts": {
    "start": "npx electron . --no-sandbox",
    "dev": "npx electron . --no-sandbox --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --windows",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "package": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.wishswipe.desktop",
    "productName": "WishSwipe",
    "copyright": "Copyright Â© 2025 WishSwipe",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.shopping",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "WishSwipe ${version}",
      "icon": "build/icon.icns",
      "background": "build/background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "WishSwipe",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WishSwipe",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "build/license.txt"
    },
    "portable": {
      "artifactName": "WishSwipe-${version}-portable.exe"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Network;Shopping",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ],
      "synopsis": "Swipe your way to great deals",
      "description": "WishSwipe is a modern marketplace where you can discover amazing deals by swiping through products."
    },
    "appImage": {
      "license": "build/license.txt"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "summary": "Swipe your way to great deals"
    },
    "publish": {
      "provider": "github",
      "owner": "wishswipe",
      "repo": "wishswipe-desktop"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  }
}

